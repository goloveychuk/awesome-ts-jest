
{
    "compilerOptions": {
        "target": "es5",
        "outDir": "dist",
        "module": "commonjs",
        "allowJs": true,
        "moduleResolution": "node",
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true,
        "strict": true,
        "lib": ["dom", "es2015"]
    },
    "include": [
        "src/**/*"
    ]
}