    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            
            "sourceMaps": true,          
            "preLaunchTask": "compile",
            "outFiles": [  
                "${workspaceRoot}/dist/**/*"
            ],
            "program": "${workspaceRoot}/node_modules/.bin/jest",
            "args": [
                "--config=jest.config.js",
                "--no-cache"
            ]
        }
    ]
}